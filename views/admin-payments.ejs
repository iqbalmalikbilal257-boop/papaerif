<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Payment Management | Paperify</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body class="bg-gray-50">
    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold text-gray-800">
                    <i class="fas fa-shield-alt text-green-600"></i> Admin Panel
                </h1>
                <button onclick="logout()" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 rounded-xl shadow-sm border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Pending Payments</p>
                        <p id="pendingCount" class="text-3xl font-bold text-yellow-600">0</p>
                    </div>
                    <i class="fas fa-clock text-4xl text-yellow-200"></i>
                </div>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-sm border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Approved Payments</p>
                        <p id="approvedCount" class="text-3xl font-bold text-green-600">0</p>
                    </div>
                    <i class="fas fa-check-circle text-4xl text-green-200"></i>
                </div>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-sm border">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Total Revenue</p>
                        <p id="totalRevenue" class="text-3xl font-bold text-blue-600">PKR 0</p>
                    </div>
                    <i class="fas fa-money-bill-wave text-4xl text-blue-200"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border">
            <div class="p-6 border-b">
                <h2 class="text-xl font-bold text-gray-800">Payment Requests</h2>
                <p class="text-sm text-gray-500 mt-1">Review and approve customer payments</p>
            </div>
            <div class="p-6">
                <div id="paymentsList" class="space-y-4">
                    <div class="text-center py-12 text-gray-400">
                        <i class="fas fa-spinner fa-spin text-4xl mb-4"></i>
                        <p>Loading payments...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let payments = [];

        async function loadPayments() {
            try {
                const response = await fetch('/api/admin/payments');
                const data = await response.json();
                
                if (!data.success) {
                    alert('Access denied. Admin only.');
                    window.location.href = '/';
                    return;
                }

                payments = data.payments;
                updateStats();
                renderPayments();
            } catch (error) {
                console.error('Error loading payments:', error);
                document.getElementById('paymentsList').innerHTML = `
                    <div class="text-center py-12 text-red-500">
                        <i class="fas fa-exclamation-circle text-4xl mb-4"></i>
                        <p>Error loading payments. Please refresh.</p>
                    </div>
                `;
            }
        }

        function updateStats() {
            const pending = payments.filter(p => p.status === 'pending').length;
            const approved = payments.filter(p => p.status === 'approved').length;
            const revenue = payments
                .filter(p => p.status === 'approved')
                .reduce((sum, p) => sum + parseInt(p.amount || 0), 0);

            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('approvedCount').textContent = approved;
            document.getElementById('totalRevenue').textContent = `PKR ${revenue.toLocaleString()}`;
        }

        function renderPayments() {
            const container = document.getElementById('paymentsList');
            
            if (payments.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-12 text-gray-400">
                        <i class="fas fa-inbox text-4xl mb-4"></i>
                        <p>No payments yet</p>
                    </div>
                `;
                return;
            }

            const sortedPayments = [...payments].sort((a, b) => 
                new Date(b.timestamp) - new Date(a.timestamp)
            );

            container.innerHTML = sortedPayments.map(payment => {
                const isPending = payment.status === 'pending';
                const isExpired = new Date(payment.expirationDate) < new Date();
                const daysLeft = Math.ceil((new Date(payment.expirationDate) - new Date()) / (1000 * 60 * 60 * 24));

                return `
                    <div class="border rounded-lg p-4 ${isPending ? 'bg-yellow-50 border-yellow-200' : 'bg-white'}">
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="px-3 py-1 rounded-full text-xs font-bold ${
                                        isPending ? 'bg-yellow-200 text-yellow-800' : 
                                        isExpired ? 'bg-red-200 text-red-800' : 
                                        'bg-green-200 text-green-800'
                                    }">
                                        ${isPending ? '⏳ PENDING' : isExpired ? '❌ EXPIRED' : '✅ ACTIVE'}
                                    </span>
                                    <span class="text-sm text-gray-500">
                                        ${new Date(payment.timestamp).toLocaleString()}
                                    </span>
                                </div>
                                <div class="grid grid-cols-2 gap-2 text-sm">
                                    <div>
                                        <span class="text-gray-500">Email:</span>
                                        <span class="font-semibold ml-2">${payment.userEmail}</span>
                                    </div>
                                    <div>
                                        <span class="text-gray-500">Plan:</span>
                                        <span class="font-semibold ml-2">${getPlanName(payment.plan)}</span>
                                    </div>
                                    <div>
                                        <span class="text-gray-500">Amount:</span>
                                        <span class="font-semibold ml-2 text-green-600">PKR ${payment.amount}</span>
                                    </div>
                                    <div>
                                        <span class="text-gray-500">Transaction ID:</span>
                                        <span class="font-mono font-semibold ml-2">${payment.transactionId}</span>
                                    </div>
                                    ${payment.books && payment.books.length > 0 ? `
                                    <div class="col-span-2">
                                        <span class="text-gray-500">Books:</span>
                                        <span class="font-semibold ml-2">${payment.books.join(', ')}</span>
                                    </div>
                                    ` : ''}
                                    <div class="col-span-2">
                                        <span class="text-gray-500">Expires:</span>
                                        <span class="font-semibold ml-2">${new Date(payment.expirationDate).toLocaleDateString()} 
                                        ${!isExpired ? `(${daysLeft} days left)` : '(Expired)'}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                ${payment.screenshot ? `
                                <a href="/data/uploads/payments/${payment.screenshot}" target="_blank" 
                                   class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 text-center text-sm">
                                    <i class="fas fa-image"></i> View Screenshot
                                </a>
                                ` : ''}
                                ${isPending ? `
                                <button onclick="approvePayment('${payment.transactionId}')" 
                                        class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 text-sm">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                                <button onclick="rejectPayment('${payment.transactionId}')" 
                                        class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 text-sm">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                                ` : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function getPlanName(plan) {
            const names = {
                'weekly_unlimited': 'Short Term (PKR 650)',
                'monthly_specific': 'Monthly (PKR 900)',
                'monthly_unlimited': 'Ultimate (PKR 1300)',
                'short_term': 'Short Term (PKR 650)',
                'monthly': 'Monthly (PKR 900)',
                'ultimate': 'Ultimate (PKR 1300)'
            };
            return names[plan] || plan;
        }

        async function approvePayment(transactionId) {
            if (!confirm('Approve this payment?')) return;

            try {
                const response = await fetch('/api/admin/approve-payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ transactionId })
                });

                const data = await response.json();
                
                if (data.success) {
                    alert('✅ Payment approved successfully!');
                    loadPayments();
                } else {
                    alert('❌ Error: ' + data.error);
                }
            } catch (error) {
                alert('❌ Error approving payment');
            }
        }

        async function rejectPayment(transactionId) {
            if (!confirm('Reject this payment? This cannot be undone.')) return;

            try {
                const response = await fetch('/api/admin/reject-payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ transactionId })
                });

                const data = await response.json();
                
                if (data.success) {
                    alert('✅ Payment rejected');
                    loadPayments();
                } else {
                    alert('❌ Error: ' + data.error);
                }
            } catch (error) {
                alert('❌ Error rejecting payment');
            }
        }

        function logout() {
            fetch('/api/auth/logout', { method: 'POST' })
                .then(() => window.location.href = '/');
        }

        // Auto-refresh every 30 seconds
        setInterval(loadPayments, 30000);

        // Initial load
        loadPayments();
    </script>
</body>
</html>
